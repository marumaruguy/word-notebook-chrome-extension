{
    "manifest_version": 3,
    "name": "Vocabulary Revision",
    "version": "0.9",
    "description": "Revise the vocabulary with help of LLM",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "tabs",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    }
}